<% if notice.present?  %>
  <div id=" notice " class=" alert alert-success " role=" alert ">
    <%= notice %>
  </div>
<% end %>

<div class="float-md-right">
  <%= link_to 'Nova Mensagem', new_mensagem_path, class: "btn btn-primary" %>
</div>

<h1>Mensagens</h1>

<% if @mensagens.empty?  %>
  <p>Nenhuma Mensagem Encontrada. </p>
<% else  %>
  <% @mensagens.each do |mensagem|  %>
  <div class="card">
    <div class="card-header">
      <h5><%= mensagem.titulo %></h5>
    </div>
    <div class="card-body">
      <%= mensagem.corpo %>
    </div>
    <div class="card-footer">
      <div class="btn-group">
        <%= link_to 'Detalhar', mensagem, class: 'btn btn-secondary btn-sm' %>
        <%= link_to 'Editar', edit_mensagem_path(mensagem), class: 'btn btn-secondary btn-sm' %>
        <%= link_to 'Excluir', mensagem, method: :delete, data: {confirm: ' Tem Certeza? ' }, class: 'btn btn-secondary btn-sm' %>
      </div>
      <div class="float-md-right">
        <small>Enviada por: <%= mail_to mensagem.email, mensagem.autor %> em <%= mensagem.created_at.strftime("%d/%m/%Y") %></small>
      </div>
      </div>
      </div>
    <% end  %>
  <%end %>


