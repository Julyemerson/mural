<p id="notice"><%= notice %></p>

<h1>Mensagens</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Corpo</th>
      <th>Autor</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mensagens.each do |mensagem| %>
      <tr>
        <td><%= mensagem.titulo %></td>
        <td><%= mensagem.corpo %></td>
        <td><%= mensagem.autor %></td>
        <td><%= mensagem.email %></td>
        <td><%= link_to 'Show', mensagem %></td>
        <td><%= link_to 'Edit', edit_mensagem_path(mensagem) %></td>
        <td><%= link_to 'Destroy', mensagem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Mensagem', new_mensagem_path %>
